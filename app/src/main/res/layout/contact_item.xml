<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/contact_item_background">

    <!-- Contact Icon -->
    <ImageView
        android:id="@+id/contactIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="This a contacts icon"
        android:src="@drawable/user" />

    <!-- Contact Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contactName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor" />

        <TextView
            android:id="@+id/contactRelationship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Friend"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextColor" />

        <TextView
            android:id="@+id/contactEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="john.doe@example.com"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextColor" />

        <TextView
            android:id="@+id/contactPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="555-1234"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextColor" />
    </LinearLayout>

    <!-- Play Button for Audio -->
    <!-- Call Button -->
    <ImageView
        android:id="@+id/callButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="contact"
        android:src="@drawable/mobile"
        android:layout_gravity="center_vertical"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="4dp" />

    <ImageView
        android:id="@+id/playButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="Play voice memo"
        android:padding="4dp"
        android:src="@android:drawable/ic_media_play" />

    <!-- Delete Icon -->
    <ImageView
        android:id="@+id/deleteButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="Delete contact"
        android:padding="4dp"
        android:src="@drawable/ic_delete" />
</LinearLayout>
